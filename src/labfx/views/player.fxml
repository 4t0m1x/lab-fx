<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Label?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="labfx.controllers.player.PlayerController" alignment="CENTER">
    <Text styleClass="caption">Player</Text>
    <HBox alignment="CENTER">
        <Button fx:id="btnPlay" text="&gt;" onAction="#playMedia">
            <HBox.margin>
                <Insets right="10"/>
            </HBox.margin>
        </Button>
        <Button text="&lt;&lt;" onAction="#prevMedia">
            <HBox.margin>
                <Insets right="10"/>
            </HBox.margin>
        </Button>
        <Button text="&gt;&gt;" onAction="#nextMedia">
            <HBox.margin>
                <Insets right="10"/>
            </HBox.margin>
        </Button>
        <Label fx:id="sourceLabel">
            <HBox.margin>
                <Insets right="10"/>
            </HBox.margin>
        </Label>
        <Slider fx:id="volumeSlider" min="0" max="1" minorTickCount="100" value="1"/>
    </HBox>
    <Text fx:id="errorLabel" styleClass="label" style="-fx-fill: red" visible="false">No media found</Text>
    <MediaView fx:id="mediaView" preserveRatio="true"/>
    <stylesheets>
        <URL value="@../styles/text.css"/>
        <URL value="@../styles/global.css"/>
    </stylesheets>
</VBox>