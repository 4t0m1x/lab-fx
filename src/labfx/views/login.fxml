<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<GridPane fx:controller="labfx.controllers.LoginController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Text id="welcome-label" text="Welcome" GridPane.columnSpan="2"
          GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <Label text="Username:"
           GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="userName"
               GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Password:"
           GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <PasswordField fx:id="password"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"
                   onAction="#signIn"/>

    <Text fx:id="errorText" id="error-text"
          GridPane.rowIndex="3" GridPane.columnIndex="0"/>

    <Button text="Sign in" alignment="BOTTOM_RIGHT"
            GridPane.rowIndex="3" GridPane.columnIndex="1"
            onAction="#signIn"/>

    <stylesheets>
        <URL value="@../styles/login.css"/>
    </stylesheets>
</GridPane>